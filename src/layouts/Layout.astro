---
const baseUrl = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href=`${baseUrl}assets/logo.png` />
    <meta name="generator" content={Astro.generator} />
    <title>Sterben</title>
  </head>
  <body>
    <nav class="navbar">
      <a href="/">
        <div class="nav-brand">
          <img src={`${baseUrl}assets/logo.png`} alt="Logo" class="nav-logo" />
          <span class="nav-brand-text">sterben</span>
        </div>
      </a>
      <div class="nav-links">
        <a href="/">Home</a>
        <a href=`/about`>About</a>
        <a href=`/work`>Work</a>
        <a href=`/contact`>Contact</a>
      </div>
    </nav>
    <slot />
  </body>
</html>

<style>
  @import url("https://fonts.googleapis.com/css2?family=EB+Garamond:ital,wght@0,400..800;1,400..800&family=Manrope:wght@200..800&family=Outfit:wght@100..900&display=swap");

  html,
  body {
    margin: 0;
    padding: 0;
    width: 100%;
    height: auto;
    background: #0f0f0f;
    color: #d1d1d1;

    font-family: "Manrope", sans-serif;
    font-optical-sizing: auto;
    font-weight: 300;
    font-style: normal;
  }

  img {
    user-select: none;
    -webkit-user-drag: none;
    -khtml-user-drag: none;
    -moz-user-drag: none;
    -o-user-drag: none;
  }

  .navbar {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 2rem 1.6rem;
    letter-spacing: 0.15rem;
    font-size: 1.5rem;
    background: rgba(15, 15, 15, 0.95);
    backdrop-filter: blur(10px);
    z-index: 1000;
  }

  .navbar.animate {
    transform: translateY(-100%);
    animation: slideDown 1s ease forwards 0.4s;
  }

  .nav-brand {
    display: flex;
    align-items: center;
    gap: 0.2rem;
    font-size: 1.4rem;
    font-weight: bold;
    color: #d1d1d1;
  }

  .nav-logo {
    height: 2.5rem;
    width: auto;
    margin: 0 0.5rem -0.3rem 0.5rem;
  }

  .nav-links {
    display: flex;
    font-size: 1rem;
    gap: 2.8rem;
  }

  .nav-links a {
    color: #d1d1d1;
    text-decoration: none;
    position: relative;
    padding: 0.2rem 0;
    font-weight: 500;
  }

  .nav-links a::after {
    content: "";
    position: absolute;
    width: 100%;
    height: 2px;
    bottom: 0;
    left: 0;
    background-color: #922dff;
    transform: scaleX(0);
    transform-origin: bottom right;
    transition: transform 0.3s ease-out;
  }

  .nav-links a:hover {
    color: #922dff;
  }

  .nav-links a:hover::after {
    transform: scaleX(1);
    transform-origin: bottom left;
  }

  @keyframes slideDown {
    from {
      transform: translateY(-100%);
    }
    to {
      transform: translateY(0%);
    }
  }

  a {
    text-decoration: none;
  }
</style>
